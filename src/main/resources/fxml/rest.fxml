<?import java.lang.String?>
<GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.jmonstro.controller.RestController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <GridPane GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <ChoiceBox fx:id="cbxMetodo" value="GET" GridPane.columnIndex="0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="GET" />
                    <String fx:value="POST" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <TextField fx:id="txtUrl" GridPane.columnIndex="1" promptText="URL" />
    </GridPane>

    <Label text="Form Data" GridPane.rowIndex="2" />
    <TableView fx:id="tblFormData" GridPane.rowIndex="3">
        <columns>
            <TableColumn prefWidth="200" text="KEY">
                <cellValueFactory>
                    <PropertyValueFactory property="key" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="VALUE">
                <cellValueFactory>
                    <PropertyValueFactory property="value" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Label text="Header" GridPane.rowIndex="4" />
    <TableView fx:id="tblHeader" GridPane.rowIndex="5">
        <columns>
            <TableColumn prefWidth="200" text="KEY">
                <cellValueFactory>
                    <PropertyValueFactory property="key" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="VALUE">
                <cellValueFactory>
                    <PropertyValueFactory property="value" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Label text="Cookie" GridPane.rowIndex="6" />
    <TableView fx:id="tblCookie" GridPane.rowIndex="7">
        <columns>
            <TableColumn prefWidth="200" text="KEY">
                <cellValueFactory>
                    <PropertyValueFactory property="key" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="VALUE">
                <cellValueFactory>
                    <PropertyValueFactory property="value" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Label text="Body JSON" GridPane.rowIndex="8" />
    <TextArea fx:id="txtBodyJson" GridPane.rowIndex="9" promptText="Body JSON"/>

    <GridPane GridPane.rowIndex="10" hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
        </columnConstraints>
        <TextField fx:id="txtProxyUrl" GridPane.columnIndex="0" promptText="Proxy URI"/>
        <TextField fx:id="txtProxyUsername" GridPane.columnIndex="1" promptText="Proxy Username"/>
        <PasswordField fx:id="txtProxyPassword" GridPane.columnIndex="2" promptText="Proxy Password"/>
    </GridPane>

    <Button onAction="#executeAction" GridPane.rowIndex="11" text="Executar"/>

    <padding>
        <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
    </padding>
</GridPane>
